pipeline {
    agent any

    tools {
        nodejs 'npm'
    }

    stages {
        stage ("Git Checkout") {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Krishna-skk/Social_Media_App_Project.git']])
            }
        }

        stage ("npm Build") {
            steps {
                sh "npm install"
            }
        }
    }
}